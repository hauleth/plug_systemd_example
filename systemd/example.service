[Unit]
Description=Example BEAM application

[Service]
Environment=HOME=/var/opt/example
WorkingDirectory=/var/opt/example
User=www-data
Group=www-data
Type=notify
ExecStart=/opt/example/bin/plug_systemd_example start
WatchdogSec=10s
NotifyAccess=main
Restart=on-failure

# Security options

ProtectSystem=full
ProtectHome=yes
PrivateDevices=yes
PrivateTmp=yes
NoNewPrivileges=yes

